# syslog
<source>
  type tail
  pos_file /var/lib/fluentd/syslog.pos
  format syslog
  path /var/log/messages
  tag <%= "#{node[:td-agent][:tag]}/syslog" %>
</source>

# secure log
<source>
  type tail
  pos_file /var/lib/fluentd/secure.pos
  format syslog
  path /var/log/secure
  tag <%= "#{node[:td-agent][:tag]}/secure" %>
</source>

<match *.**>
  type forward
  retry_limit 17
  retry_wait 1s
  flush_interval 60s
  buffer_type file
  buffer_path /var/log/td-agent/forward_buffer_*
  buffer_queue_limit 256
  buffer_chunk_limit 8m
  <server>
    host <%= node[:td-agent][:host] %>
    port 24224
  </server>
</match>